@model EntityLayer.Concrete.Job

@{
    ViewData["Title"] = "UpdateJob";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h2>Meslek Güncelle</h2>

<form method="post">
    @Html.HiddenFor(x => x.JobId)
    <div class="mb-3">
        @Html.LabelFor(x => x.JobName, "Meslek Adı", new { @class = "form-label" })
        @Html.TextBoxFor(x => x.JobName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.JobName, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

