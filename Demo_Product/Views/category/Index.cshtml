@model IEnumerable<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">Kategoriler</h2>
        <a href="/category/AddCategory" class="btn btn-dark">
            <i class="bi bi-plus-circle"></i> Yeni Kategori
        </a>
    </div>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.CategoryName</td>
                        <td>
                            <a href="/category/DeleteCategory/@item.CategoryId" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');"> Sil</a>
                            <a href="/category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a>
                        </td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">Hiç kategori bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

